    <!-- Android -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="22"/>
        <preference name="android-targetSdkVersion" value="32"/>
        <preference name="android-compileSdkVersion" value="32" />
        <preference name="android-installLocation" value="auto"/>
        <preference name="AndroidXEnabled" value="true"/>

        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/splash.png" />
        <preference name="AndroidWindowSplashScreenBackground" value="#f39bc3" />
    </platform>

    <!-- Plugins -->
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.2" />
        <preference name="SplashScreenDelay" value="2000" />
        <preference name="AutoHideSplashScreen" value="true" />

    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />
        <preference name="StatusBarOverlaysWebView" value="false"/>
        <preference name="StatusBarBackgroundColor" value="#f39bc3"/>
        <preference name="StatusBarStyle" value="default"/>

    <plugin name="cordova-plugin-device" spec="^2.1.0" />

</widget>
