<widget
    xmlns="http://www.w3.org/ns/widgets"
    id="com.crocsy"
    version="1.0.1"
    android-versionCode="2"
    ios-CFBundleVersion="1.0.1"
>

    <!-- App information -->
    <name>Crocsy</name>
    <description>Simple proxy app made with HTML, Css, Javascript. Get random free Http/Https proxies. </description>
    <author email="private@private.com" href="https://github.com/Kourva"></author>

    <!-- General -->
    <allow-navigation href="*"/>
    <access origin="*"/>
    <allow-intent href="*" />

    <icon src="resources/icon.png" />

    <preference name="permissions" value="none"/>
    <preference name="orientation" value="portrait"/>

